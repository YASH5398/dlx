rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "sourav23065398@gmail.com";
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // ðŸ”’ Admin full access
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // USERS
    match /users/{uid} {
      allow read, update, delete: if isOwner(uid) || isAdmin();
      allow create: if isSignedIn();
    }

    // WALLETS
    match /wallets/{uid} {
      allow read, write: if isOwner(uid) || isAdmin();
      match /transactions/{txnId} {
        allow read, write: if isOwner(uid) || isAdmin();
      }
    }

    // DEPOSIT REQUESTS
    match /depositRequests/{docId} {
      allow read, create, update, delete: if isSignedIn() || isAdmin();
    }

    // WITHDRAWAL REQUESTS
    match /withdrawalRequests/{docId} {
      allow read, create, update, delete: if isSignedIn() || isAdmin();
    }

    // âœ… REVIEWS (Global)
    match /reviews/{docId} {
      allow read: if true; // Public read
      allow create, update, delete: if isAdmin(); // Only admin manage
    }

    // âœ… SERVICES + SUBCOLLECTION REVIEWS
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();

      // Subcollection: reviews under each service
      match /reviews/{reviewId} {
        allow read: if true; // anyone can see service reviews
        allow create, update, delete: if isAdmin(); // only admin manage reviews
      }
    }

    // ORDERS, MINING, REFERRALS, REWARDS
    match /{collName}/{docId} {
      allow read: if isSignedIn() || isAdmin();
      allow write: if isSignedIn() || isAdmin();
    }
  }
}
